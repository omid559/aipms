{
  "name": "aipms",
  "version": "1.0.0",
  "description": "AI-Powered 3D Print Management System - Professional slicing settings with AI optimization",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "tsx watch backend/src/server.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p backend/tsconfig.json",
    "build:frontend": "cd frontend && npm run build",
    "start": "node backend/dist/server.js",
    "start:prod": "pm2 start ecosystem.config.cjs --env production",
    "stop:prod": "pm2 stop ecosystem.config.cjs",
    "restart:prod": "pm2 restart ecosystem.config.cjs",
    "logs:prod": "pm2 logs aipms-backend",
    "monitor": "pm2 monit",
    "install:all": "npm install && cd frontend && npm install",
    "seed": "tsx backend/src/scripts/seedDatabase.ts",
    "test": "cd backend && NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cd backend && NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cd backend && NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "keywords": [
    "3d-printing",
    "slicing",
    "ai",
    "gcode",
    "stl"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^7.99.0",
    "@sentry/profiling-node": "^1.3.3",
    "archiver": "^6.0.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ini": "^4.1.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "node-stl": "^0.7.0",
    "openai": "^4.20.1",
    "pm2": "^5.3.0",
    "prom-client": "^15.1.0",
    "three": "^0.160.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@types/three": "^0.160.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  }
}
