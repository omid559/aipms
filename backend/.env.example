# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/aipms

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-12345
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=50000000

# GapGPT AI Service Configuration (using DeepSeek R1)
GAPGPT_API_KEY=your-gapgpt-api-key-here
GAPGPT_BASE_URL=https://api.gapgpt.app/v1
# Alternative base URL: https://api.gapapi.com/v1

# Model Configuration
# For text generation and reasoning
GAPGPT_MODEL=deepseek-reasoner
# For vision tasks (if supported by GapGPT)
GAPGPT_VISION_MODEL=deepseek-reasoner

# Note: DeepSeek R1 models available:
# - deepseek-reasoner: DeepSeek R1 with reasoning capabilities
# - deepseek-chat: DeepSeek chat model without reasoning

# Legacy OpenAI Configuration (not used with GapGPT)
# OPENAI_API_KEY=your-openai-api-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Clustering
CLUSTER_WORKERS=2
