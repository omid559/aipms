# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/aipms

# Authentication
JWT_SECRET=your_secret_key_change_this_in_production_use_long_random_string
JWT_EXPIRES_IN=7d

# Monitoring - Sentry (optional, for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100000000

# Security Configuration
CORS_ORIGIN=*
# In production, set to your frontend URL, e.g., https://yourdomain.com

# File Cleanup Service
FILE_CLEANUP_INTERVAL_MINUTES=60
FILE_MAX_AGE_HOURS=24

# OrcaSlicer Configuration
# Path to OrcaSlicer executable (optional - will use system path if not set)
# Linux: /usr/bin/orca-slicer or /usr/local/bin/orca-slicer
# Windows: C:\Program Files\OrcaSlicer\orca-slicer.exe
# macOS: /Applications/OrcaSlicer.app/Contents/MacOS/OrcaSlicer
ORCA_SLICER_PATH=orca-slicer

# Backup Configuration
BACKUP_RETENTION_DAYS=7

# Cloud Backup (optional)
BACKUP_CLOUD_ENABLE=false
BACKUP_CLOUD_PROVIDER=s3
# AWS S3
BACKUP_S3_BUCKET=your-bucket-name
# Google Cloud Storage
BACKUP_GCS_BUCKET=your-bucket-name
# Azure Blob Storage
BACKUP_AZURE_CONTAINER=your-container-name
BACKUP_AZURE_ACCOUNT=your-account-name
